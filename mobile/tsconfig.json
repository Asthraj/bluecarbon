{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["es2017"],
    "target": "es2017",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "resolveJsonModule": true,
    "types": ["react", "react-native"]
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
